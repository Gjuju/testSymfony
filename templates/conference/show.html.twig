{% extends 'base.html.twig' %}

{% block title %}
  {{ conference.city ~ ' - ' ~ conference.year }}
{% endblock %}

{% block body %}
  <h1>
    {{ conference.city ~ ' - ' ~ conference.year }}
  </h1>
  {% if conference.isinternational == true %}
    <h3 class="mb-4">
      International conference
    </h3>
  {% else %}
    <h3 class="mb-4">
      Local conference
    </h3>
  {% endif %}

  <ul class="list-group">
    {% for comment in comments %}
      <li class="list-group-item list-group-item-action list-group-item-dark">
        <h5>{{ 'De : '~ comment.author ~ ' - email : '~ comment.email ~ ' - date : ' ~  comment.createdAt|date("d-m-Y")}}<h5>
      </li>
      <li class="list-group-item list-group-item-action">
        <h5>{{ comment.text }}</h5>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
